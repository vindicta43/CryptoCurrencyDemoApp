<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/tradeFragment">

    <fragment
        android:id="@+id/tradeFragment"
        android:name="com.alperen.cryptocurrencydemoapp.ui.TradeFragment"
        android:label="TradeFragment"
        tools:layout="@layout/fragment_trade">
        <action
            android:id="@+id/action_tradeFragment_to_chartFragment"
            app:destination="@id/chartFragment" />
    </fragment>
    <fragment
        android:id="@+id/chartFragment"
        android:name="com.alperen.cryptocurrencydemoapp.ui.ChartFragment"
        android:label="ChartFragment"
        tools:layout="@layout/fragment_chart" />
</navigation>